  <!-- Draconic Color (dropdown, like Dragonborn ancestry) -->
  <!-- ========================= -->
  <element name="Draconic Color" type="Racial Trait" source="Traveler's Guide to Elysia" id="ID_ELYSIA_TRAIT_DRAGON_KIN_COLOR">
    <description>
      <p>Choose your draconic color. Your color determines your draconic damage type and grants resistance to that damage type.</p>
      <h5>DRACONIC COLOR</h5>
      <table>
        <thead>
          <tr><td>Color</td><td>Damage Type</td><td>Temperament</td></tr>
        </thead>
        <tr><td>Ruby</td><td>Fire</td><td>Passionate, bold</td></tr>
        <tr><td>Sapphire</td><td>Lightning</td><td>Restless, quick-thinking</td></tr>
        <tr><td>Emerald</td><td>Thunder</td><td>Grounded, stubborn</td></tr>
        <tr><td>Topaz</td><td>Cold</td><td>Calm, calculating</td></tr>
        <tr><td>Crystal</td><td>Radiant</td><td>Idealistic, protective</td></tr>
        <tr><td>Obsidian</td><td>Necrotic</td><td>Private, intense</td></tr>
        <tr><td>Amethyst</td><td>Force</td><td>Analytical, imaginative</td></tr>
      </table>
    </description>
    <sheet display="false" />
    <rules>
      <select type="Racial Trait" name="Draconic Color" supports="Draconic Color" />
    </rules>
  </element>

  <!-- ========================= -->
  <!-- Damage Resistance (keyed off chosen color) -->
  <!-- ========================= -->
  <element name="Damage Resistance (Dragon-Kin)" type="Racial Trait" source="Traveler's Guide to Elysia" id="ID_ELYSIA_TRAIT_DRAGON_KIN_DAMAGE_RESISTANCE">
    <description><p>You have resistance to the damage type associated with your draconic color.</p></description>
    <sheet>
      <description>You have resistance to {{draconic-color:damage type}}.</description>
    </sheet>
    <rules>
      <grant type="Condition" id="ID_INTERNAL_CONDITION_DAMAGE_RESISTANCE_FIRE" requirements="ID_ELYSIA_TRAIT_DRAGON_KIN_COLOR_RUBY" />
      <grant type="Condition" id="ID_INTERNAL_CONDITION_DAMAGE_RESISTANCE_LIGHTNING" requirements="ID_ELYSIA_TRAIT_DRAGON_KIN_COLOR_SAPPHIRE" />
      <grant type="Condition" id="ID_INTERNAL_CONDITION_DAMAGE_RESISTANCE_THUNDER" requirements="ID_ELYSIA_TRAIT_DRAGON_KIN_COLOR_EMERALD" />
      <grant type="Condition" id="ID_INTERNAL_CONDITION_DAMAGE_RESISTANCE_COLD" requirements="ID_ELYSIA_TRAIT_DRAGON_KIN_COLOR_TOPAZ" />
      <grant type="Condition" id="ID_INTERNAL_CONDITION_DAMAGE_RESISTANCE_RADIANT" requirements="ID_ELYSIA_TRAIT_DRAGON_KIN_COLOR_CRYSTAL" />
      <grant type="Condition" id="ID_INTERNAL_CONDITION_DAMAGE_RESISTANCE_NECROTIC" requirements="ID_ELYSIA_TRAIT_DRAGON_KIN_COLOR_OBSIDIAN" />
      <grant type="Condition" id="ID_INTERNAL_CONDITION_DAMAGE_RESISTANCE_FORCE" requirements="ID_ELYSIA_TRAIT_DRAGON_KIN_COLOR_AMETHYST" />
    </rules>
  </element>

