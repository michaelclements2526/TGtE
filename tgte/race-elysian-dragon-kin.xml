<?xml version="1.0" encoding="utf-8"?>
<elements>
  <!-- ========================= -->
  <!-- Race: Elysian Dragon-Kin   -->
  <!-- ========================= -->
  <element name="Elysian Dragon-Kin" type="Race" source="Traveler's Guide to Elysia" id="ID_ELYSIA_RACE_DRAGON_KIN">
    <description>
      <p>Dragon-Kin are humanoids who carry draconic blood not as a distant echo, but as a living inheritance. Unlike dragonborn, whose lineage manifests uniformly, Dragon-Kin display their heritage in varied and personal ways—through antler-like horns, patches of shimmering scales, and tails that move with deliberate balance.</p>
      <p>Their draconic ancestry is ancient rather than immediate. At some point deep within their lineage, a dragon became bound to a mortal bloodline through means long lost to history. Once established, this inheritance does not fade or dilute over generations. A Dragon-Kin family remains draconic indefinitely, which is both the source of their power and the reason for their rarity.</p>
      <p>Though uncommon, Dragon-Kin often integrate seamlessly into the cultures they inhabit, identifying more with the societies that raised them than with any unified Dragon-Kin culture.</p>
    </description>

    <!-- IMPORTANT: keep race sheet hidden so the "blob text" doesn't replace trait entries -->
    <sheet display="false" />

    <rules>
      <!-- Aurora tends to like "innate speed" for races -->
      <stat name="innate speed" value="30" bonus="base" />

      <grant type="Language" id="ID_LANGUAGE_COMMON" />
      <grant type="Language" id="ID_LANGUAGE_DRACONIC" />

      <grant type="Racial Trait" id="ID_ELYSIA_TRAIT_DRAGON_KIN_ASI" />
      <grant type="Racial Trait" id="ID_ELYSIA_TRAIT_DRAGON_KIN_DARKVISION_30" />
      <grant type="Racial Trait" id="ID_ELYSIA_TRAIT_DRAGON_KIN_DRACONIC_WILL" />
      <grant type="Racial Trait" id="ID_ELYSIA_TRAIT_DRAGON_KIN_DRACONIC_INSIGHT" />
      <grant type="Racial Trait" id="ID_ELYSIA_TRAIT_DRAGON_KIN_CULTURAL_ADAPTATION" />
      <grant type="Racial Trait" id="ID_ELYSIA_TRAIT_DRAGON_KIN_EXPRESSION" />
      <grant type="Racial Trait" id="ID_ELYSIA_TRAIT_DRAGON_KIN_COLOR" />
    </rules>
  </element>

  <!-- ========================= -->
  <!-- ASI: Two +1 improvements   -->
  <!-- (Aurora-native pattern)    -->
  <!-- ========================= -->
  <element name="Ability Score Increase" type="Racial Trait" source="Traveler's Guide to Elysia" id="ID_ELYSIA_TRAIT_DRAGON_KIN_ASI">
    <description>
      <p>Increase two different ability scores of your choice by 1.</p>
    </description>
    <sheet>
      <description>Increase two ability scores by 1 (choose twice).</description>
    </sheet>
    <rules>
      <!-- This is the same style you saw in the Vulpin example -->
      <select type="Ability Score Improvement" name="Ability Score Increase +1 (Dragon-Kin)" supports="Custom Ability Score Increase 1" />
      <select type="Ability Score Improvement" name="Ability Score Increase +1 (Dragon-Kin)" supports="Custom Ability Score Increase 1" />
    </rules>
  </element>

  <!-- ========================= -->
  <!-- Darkvision (display only)  -->
  <!-- ========================= -->
  <element name="Darkvision" type="Racial Trait" source="Traveler's Guide to Elysia" id="ID_ELYSIA_TRAIT_DRAGON_KIN_DARKVISION_30">
    <description>
      <p>You have darkvision out to 30 feet. In addition, you have advantage on Wisdom (Perception) checks that rely on sight.</p>
    </description>
    <sheet>
      <description>Darkvision 30 ft. Advantage on sight-based Perception checks.</description>
    </sheet>
  </element>

  <element name="Draconic Will" type="Racial Trait" source="Traveler's Guide to Elysia" id="ID_ELYSIA_TRAIT_DRAGON_KIN_DRACONIC_WILL">
    <description>
      <p>You have advantage on saving throws against being charmed or frightened.</p>
    </description>
    <sheet>
      <description>Advantage on saves vs charmed and frightened.</description>
    </sheet>
  </element>

  <!-- ========================= -->
  <!-- Draconic Insight (2 skills) -->
  <!-- ========================= -->
  <element name="Draconic Insight" type="Racial Trait" source="Traveler's Guide to Elysia" id="ID_ELYSIA_TRAIT_DRAGON_KIN_DRACONIC_INSIGHT">
    <description>
      <p>You gain proficiency in two of the following skills of your choice: Perception, Nature, Survival, or Insight.</p>
    </description>
    <sheet>
      <description>Choose two skills: Perception, Nature, Survival, or Insight.</description>
    </sheet>
    <rules>
      <select type="Proficiency" name="Draconic Insight (Skill 1)" supports="ID_PROFICIENCY_SKILL_PERCEPTION|ID_PROFICIENCY_SKILL_NATURE|ID_PROFICIENCY_SKILL_SURVIVAL|ID_PROFICIENCY_SKILL_INSIGHT" />
      <select type="Proficiency" name="Draconic Insight (Skill 2)" supports="ID_PROFICIENCY_SKILL_PERCEPTION|ID_PROFICIENCY_SKILL_NATURE|ID_PROFICIENCY_SKILL_SURVIVAL|ID_PROFICIENCY_SKILL_INSIGHT" />
    </rules>
  </element>

  <!-- ========================= -->
  <!-- Cultural Adaptation (choice) -->
  <!-- ========================= -->
  <element name="Cultural Adaptation" type="Racial Trait" source="Traveler's Guide to Elysia" id="ID_ELYSIA_TRAIT_DRAGON_KIN_CULTURAL_ADAPTATION">
    <description>
      <p>You gain proficiency with one tool of your choice, or you learn one additional language of your choice.</p>
    </description>
    <sheet>
      <description>Choose one: a tool proficiency, or an extra language.</description>
    </sheet>
    <rules>
      <select type="Racial Trait" name="Cultural Adaptation" supports="ID_ELYSIA_TRAIT_DRAGON_KIN_CULTURAL_TOOL|ID_ELYSIA_TRAIT_DRAGON_KIN_CULTURAL_LANGUAGE" />
    </rules>
  </element>

  <element name="Cultural Adaptation — Tool" type="Racial Trait" source="Traveler's Guide to Elysia" id="ID_ELYSIA_TRAIT_DRAGON_KIN_CULTURAL_TOOL">
    <description><p>You gain proficiency with one tool of your choice.</p></description>
    <sheet>
      <description>Gain proficiency with one tool.</description>
    </sheet>
    <rules>
      <select type="Proficiency" name="Tool Proficiency (Dragon-Kin)" supports="Tool" />
    </rules>
  </element>

  <element name="Cultural Adaptation — Language" type="Racial Trait" source="Traveler's Guide to Elysia" id="ID_ELYSIA_TRAIT_DRAGON_KIN_CULTURAL_LANGUAGE">
    <description><p>You learn one additional language of your choice.</p></description>
    <sheet>
      <description>Learn one additional language.</description>
    </sheet>
    <rules>
      <select type="Language" name="Extra Language (Dragon-Kin)" supports="Standard||Exotic" />
    </rules>
  </element>

  <!-- ========================= -->
  <!-- Draconic Expression (choice) -->
  <!-- ========================= -->
  <element name="Draconic Expression" type="Racial Trait" source="Traveler's Guide to Elysia" id="ID_ELYSIA_TRAIT_DRAGON_KIN_EXPRESSION">
    <description>
      <p>Choose one: Great Wings, Draconic Magic, or Great Horns.</p>
    </description>
    <sheet>
      <description>Choose one: Great Wings, Draconic Magic, or Great Horns.</description>
    </sheet>
    <rules>
      <select type="Racial Trait" name="Draconic Expression" supports="ID_ELYSIA_TRAIT_DRAGON_KIN_WINGS|ID_ELYSIA_TRAIT_DRAGON_KIN_MAGIC|ID_ELYSIA_TRAIT_DRAGON_KIN_HORNS" />
    </rules>
  </element>

  <element name="Great Wings" type="Racial Trait" source="Traveler's Guide to Elysia" id="ID_ELYSIA_TRAIT_DRAGON_KIN_WINGS">
    <description>
      <p>You can manifest your wings to gain a flying speed of 30 feet for a total of 10 minutes per day. These minutes can be used all at once or in shorter increments (no action required). You regain expended minutes when you finish a long rest.</p>
    </description>
    <sheet usage="10 minutes/Long Rest">
      <description>Fly speed 30 ft for up to 10 minutes per long rest (track minutes spent).</description>
    </sheet>
  </element>

  <element name="Draconic Magic" type="Racial Trait" source="Traveler's Guide to Elysia" id="ID_ELYSIA_TRAIT_DRAGON_KIN_MAGIC">
    <description>
      <p>As an action, you release a pulse of draconic energy in a 15-foot radius centered on yourself. Each creature of your choice in the area takes 2d4 damage (type = your Draconic Color). Uses: 2 per short rest. Damage increases by 1d4 at 5th, 10th, and 15th level.</p>
    </description>
    <sheet usage="2/Short Rest" action="Action">
      <description>15-ft radius pulse; creatures you choose take 2d4 damage (type = your Draconic Color). +1d4 at 5th/10th/15th.</description>
    </sheet>
  </element>

  <element name="Great Horns" type="Racial Trait" source="Traveler's Guide to Elysia" id="ID_ELYSIA_TRAIT_DRAGON_KIN_HORNS">
    <description>
      <p>When you take acid, cold, fire, lightning, or thunder damage, you can use your reaction to gain the benefits of <i>absorb elements</i>. Uses: 2 per long rest.</p>
    </description>
    <sheet usage="2/Long Rest" action="Reaction">
      <description>Reaction: gain the benefits of <i>absorb elements</i> when you take acid, cold, fire, lightning, or thunder damage.</description>
    </sheet>
  </element>

  <!-- ========================= -->
  <!-- Draconic Color (choice)    -->
  <!-- ========================= -->
  <element name="Draconic Color" type="Racial Trait" source="Traveler's Guide to Elysia" id="ID_ELYSIA_TRAIT_DRAGON_KIN_COLOR">
    <description>
      <p>Choose one draconic color. This determines the damage type for Draconic Magic and any feature that references your draconic damage type.</p>
    </description>
    <sheet>
      <description>Choose a draconic color (sets your draconic damage type).</description>
    </sheet>
    <rules>
      <select type="Racial Trait" name="Draconic Color" supports="ID_ELYSIA_TRAIT_DRAGON_KIN_COLOR_RUBY|ID_ELYSIA_TRAIT_DRAGON_KIN_COLOR_SAPPHIRE|ID_ELYSIA_TRAIT_DRAGON_KIN_COLOR_EMERALD|ID_ELYSIA_TRAIT_DRAGON_KIN_COLOR_TOPAZ|ID_ELYSIA_TRAIT_DRAGON_KIN_COLOR_CRYSTAL|ID_ELYSIA_TRAIT_DRAGON_KIN_COLOR_OBSIDIAN|ID_ELYSIA_TRAIT_DRAGON_KIN_COLOR_AMETHYST" />
    </rules>
  </element>

  <element name="Ruby" type="Racial Trait" source="Traveler's Guide to Elysia" id="ID_ELYSIA_TRAIT_DRAGON_KIN_COLOR_RUBY">
    <sheet><description>Draconic damage type: Fire.</description></sheet>
  </element>

  <element name="Sapphire" type="Racial Trait" source="Traveler's Guide to Elysia" id="ID_ELYSIA_TRAIT_DRAGON_KIN_COLOR_SAPPHIRE">
    <sheet><description>Draconic damage type: Lightning.</description></sheet>
  </element>

  <element name="Emerald" type="Racial Trait" source="Traveler's Guide to Elysia" id="ID_ELYSIA_TRAIT_DRAGON_KIN_COLOR_EMERALD">
    <sheet><description>Draconic damage type: Thunder.</description></sheet>
  </element>

  <element name="Topaz" type="Racial Trait" source="Traveler's Guide to Elysia" id="ID_ELYSIA_TRAIT_DRAGON_KIN_COLOR_TOPAZ">
    <sheet><description>Draconic damage type: Cold.</description></sheet>
  </element>

  <element name="Crystal" type="Racial Trait" source="Traveler's Guide to Elysia" id="ID_ELYSIA_TRAIT_DRAGON_KIN_COLOR_CRYSTAL">
    <sheet><description>Draconic damage type: Radiant.</description></sheet>
  </element>

  <element name="Obsidian" type="Racial Trait" source="Traveler's Guide to Elysia" id="ID_ELYSIA_TRAIT_DRAGON_KIN_COLOR_OBSIDIAN">
    <sheet><description>Draconic damage type: Necrotic.</description></sheet>
  </element>

  <element name="Amethyst" type="Racial Trait" source="Traveler's Guide to Elysia" id="ID_ELYSIA_TRAIT_DRAGON_KIN_COLOR_AMETHYST">
    <sheet><description>Draconic damage type: Force.</description></sheet>
  </element>
</elements>